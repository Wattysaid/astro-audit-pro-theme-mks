---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Why Choose MKS Rural Services | Country Care HVAC Experts',
  description: 'Learn what sets MKS Rural Services apart — licensed technicians, mobile workshop, focus on safety, and a community-first approach to refrigeration and air conditioning.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const pillars = [
  {
    title: 'Quality over speed',
    description:
      'We slow down to plan properly, explain the options, and finish jobs the right way — even if it means a late night. Corners stay uncut.'
  },
  {
    title: 'Country hospitality',
    description:
      'Expect a warm greeting, plain-language updates, and technicians who remember your name and the story behind your site.'
  },
  {
    title: 'Safety & family first',
    description:
      'We schedule around family commitments, prioritise vulnerable clients during extreme weather, and make sure every crew member goes home safe.'
  },
  {
    title: 'Financial stability & growth',
    description:
      'Maintenance contracts and careful budgeting fund new apprentices, tools, and vehicles — keeping wait times down for rural clients.'
  }
];

const comparison = [
  {
    feature: 'Response time',
    mks: 'Direct access to Mark and the crew with priority call-outs for contract clients and rural neighbours.',
    alternative: 'Metro-based providers juggling long travel times and call centres.'
  },
  {
    feature: 'On-site capability',
    mks: 'Fully equipped service trailer with common refrigeration and AC parts to solve issues in one visit.',
    alternative: 'Multiple trips required while waiting on parts from the city.'
  },
  {
    feature: 'Communication style',
    mks: 'Friendly, honest updates, photos, and follow-up calls to confirm everything is running smoothly.',
    alternative: 'Technical jargon, patchy updates, and little visibility on next steps.'
  },
  {
    feature: 'Future readiness',
    mks: 'Investing in apprentices and digital tools so the business grows sustainably for the next decade.',
    alternative: 'Short-term focus with limited reinvestment in people or equipment.'
  }
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Our Difference</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">Why Queenslanders choose MKS Rural Services</h1>
        <p class="text-lg text-slate-700">
          We bring licensed expertise, a mobile workshop, and genuine country hospitality to every job. Here’s how that plays out day-to-day.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-6xl px-4 grid gap-8 md:grid-cols-2">
        {pillars.map((pillar) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm" key={pillar.title}>
            <h2 class="text-xl font-semibold text-slate-900">{pillar.title}</h2>
            <p class="mt-3 text-base text-slate-700">{pillar.description}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="py-16 bg-slate-50">
      <div class="container mx-auto max-w-6xl px-4 overflow-x-auto">
        <table class="w-full min-w-[640px] border-collapse rounded-2xl overflow-hidden shadow-sm">
          <thead class="bg-slate-900 text-white">
            <tr>
              <th class="p-4 text-left text-sm font-semibold uppercase tracking-wide">What matters</th>
              <th class="p-4 text-left text-sm font-semibold uppercase tracking-wide">MKS Rural Services</th>
              <th class="p-4 text-left text-sm font-semibold uppercase tracking-wide">Typical alternative</th>
            </tr>
          </thead>
          <tbody>
            {comparison.map((row) => (
              <tr key={row.feature} class="odd:bg-white even:bg-slate-100">
                <td class="p-4 align-top text-sm font-medium text-slate-800">{row.feature}</td>
                <td class="p-4 align-top text-sm text-slate-700">{row.mks}</td>
                <td class="p-4 align-top text-sm text-slate-700">{row.alternative}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900">Let’s build a service plan that fits your goals</h2>
        <p class="text-base text-slate-700">
          Call <a href="tel:0405837584" class="text-sky-700 font-semibold hover:underline">0405 837 584</a> or email <a href="mailto:admin@mksruralservices.com" class="text-sky-700 font-semibold hover:underline">admin@mksruralservices.com</a>. We will organise a time to visit, assess your setup, and outline the smartest next steps.
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
