---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'News & Insights | MKS Rural Services HVAC Blog',
  description: 'Read refrigeration and air conditioning updates, seasonal maintenance reminders, and community stories from MKS Rural Services in Fernvale, Queensland.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const posts = [
  {
    title: 'Preparing Your Cold Room for Queensland Summers',
    date: 'January 2025',
    summary: 'A pre-season checklist covering coils, seals, and generator backups to protect produce during heatwaves.',
    action: 'Request the checklist',
    href: 'mailto:admin@mksruralservices.com?subject=Cold%20Room%20Checklist%20Request'
  },
  {
    title: 'Should You Repair or Replace an Aging Split System?',
    date: 'December 2024',
    summary: 'Mark shares tell-tale signs it is time to upgrade, plus budgeting tips for households and rentals.',
    action: 'Book an in-home assessment',
    href: 'tel:0405837584'
  },
  {
    title: 'Case Study: Mobile Workshop in Action',
    date: 'November 2024',
    summary: 'How a late-night refrigeration breakdown at a rural grocer was resolved in one visit thanks to our stocked trailer.',
    action: 'Read the project summary',
    href: '/success-stories'
  }
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">News &amp; Insights</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">Friendly advice from your local HVAC crew</h1>
        <p class="text-lg text-slate-700">
          We keep posts short, practical, and rooted in real jobs across the Lockyer Valley and Somerset Regions. Share them with neighbours or your workplace safety team.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-5xl px-4 space-y-6">
        {posts.map((post) => (
          <article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm" key={post.title}>
            <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">{post.date}</p>
            <h2 class="mt-2 text-2xl font-semibold text-slate-900">{post.title}</h2>
            <p class="mt-3 text-base text-slate-700">{post.summary}</p>
            <div class="mt-4 text-sm font-medium text-sky-700">
              <a href={post.href} class="hover:underline">{post.action}</a>
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout>
