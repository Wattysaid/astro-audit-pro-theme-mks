---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';
import PracticeCard from '@/components/ui/practice-card';
import { Button } from '@/components/ui/button';

// SEO metadata specific to best practices page
const seo = {
	title: "Security Audit Best Practices & Implementation Guide",
	description: "Learn essential security audit practices, from basic planning to advanced penetration testing. Industry-specific guides for healthcare, finance, and cloud security compliance.",
	image: "/og-image.png",
	canonicalURL: Astro.site + Astro.url.pathname,
};
---

<Layout {...seo}>
  <Header />
  <main>
    {/* Hero Section */}
    <section class="bg-gradient-to-b from-indigo-50 to-white py-20">
      <div class="container mx-auto max-w-7xl px-4">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            Security Audit Best Practices
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Learn industry-leading practices for conducting effective IT security audits and maintaining compliance.
          </p>
        </div>
      </div>
    </section>

    {/* Getting Started */}
