---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Guides & Checklists | MKS Rural Services Resources',
  description: 'Download HVAC maintenance planners, cold chain logs, and upgrade checklists from MKS Rural Services to support Fernvale, Lockyer Valley, and Somerset Region clients.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const resources = [
  {
    title: 'Seasonal Maintenance Planner',
    summary: 'Plan coil cleaning, filter changes, and leak checks around school terms, harvests, and holiday rushes.',
    action: 'Request PDF via email',
    href: 'mailto:admin@mksruralservices.com?subject=Seasonal%20Maintenance%20Planner'
  },
  {
    title: 'Cold Chain Emergency Log',
    summary: 'Document temperature shifts, corrective actions, and follow-up tasks when refrigeration incidents occur.',
    action: 'Request template',
    href: 'mailto:admin@mksruralservices.com?subject=Cold%20Chain%20Emergency%20Log'
  },
  {
    title: 'HVAC Upgrade Checklist',
    summary: 'Work through repair vs replace decisions, heat-load calculations, and financing considerations.',
    action: 'Book a consultation',
    href: 'tel:0405837584'
  }
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Resources</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">Handy guides from the MKS workshop</h1>
        <p class="text-lg text-slate-700">
          We compiled the checklists we use with farmers, hospitality teams, and homeowners across Queensland. Request a digital copy or ask us to bring printed versions on our next visit.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-5xl px-4 space-y-6">
        {resources.map((resource) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm" key={resource.title}>
            <h2 class="text-xl font-semibold text-slate-900">{resource.title}</h2>
            <p class="mt-3 text-base text-slate-700">{resource.summary}</p>
            <div class="mt-4 text-sm font-medium text-sky-700">
              <a href={resource.href} class="hover:underline">{resource.action}</a>
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout>
