---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Client Testimonials | MKS Rural Services HVAC Reviews',
  description: 'Read genuine feedback from Queensland clients who trust MKS Rural Services for refrigeration and air conditioning support.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const testimonials = [
  {
    name: 'Lockyer Valley Produce Co.',
    role: 'Cold Storage Manager',
    quote:
      'MKS keeps our cold rooms within spec even during peak harvest. The team responds quickly and their maintenance program reduced our power bills.'
  },
  {
    name: 'Somerset Engineering Workshop',
    role: 'Operations Supervisor',
    quote:
      'Their mobile setup means most repairs are finished in one visit. Mark explains the options clearly and follows up to make sure everything is humming.'
  },
  {
    name: 'Sarah & Liam, Lowood',
    role: 'Homeowners',
    quote:
      'From design to install, the crew guided us through choosing an efficient ducted system. They treated our home with respect and left it spotless.'
  },
  {
    name: 'Brisbane River Marine Services',
    role: 'Fleet Manager',
    quote:
      'Marine HVAC is specialised and MKS gets it. They handled installation and ongoing servicing without disrupting our charter schedule.'
  }
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Testimonials</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">Neighbours we proudly look after</h1>
        <p class="text-lg text-slate-700">
          Word of mouth keeps our phones ringing. Here’s what locals say about the country care they receive from MKS Rural Services.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-6xl px-4 grid gap-8 md:grid-cols-2">
        {testimonials.map((item) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm" key={item.name}>
            <p class="text-lg text-slate-800">“{item.quote}”</p>
            <div class="mt-6 text-sm text-slate-600">
              <p class="font-semibold text-slate-900">{item.name}</p>
              <p>{item.role}</p>
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout>
