---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Careers with MKS Rural Services | Apprenticeships & HVAC Roles',
  description: 'Join the MKS Rural Services team in Fernvale, Queensland. Learn about our culture, apprenticeships, and how to register your interest in future refrigeration and air conditioning roles.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const traits = [
  'Hands-on technicians who take pride in doing the job right the first time.',
  'Apprentices eager to learn the trade, ask questions, and embrace rural fieldwork.',
  'Positive communicators who treat clients like neighbours and teammates like family.',
  'Safety-minded individuals who are comfortable working in refrigeration plants, farms, and marine environments.'
];

const benefits = [
  'Family-first scheduling — we understand school runs, harvests, and community commitments.',
  'On-the-job mentoring directly from Mark Sherwood and senior technicians.',
  'Exposure to residential, agricultural, commercial, and marine HVAC projects.',
  'Investment in training, tooling, and a supportive environment to grow your trade.'
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Careers</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">Help us cool Queensland with country hospitality</h1>
        <p class="text-lg text-slate-700">
          MKS Rural Services is growing. We are looking for people who love the trade, respect safety, and enjoy a friendly chat with clients as much as a tidy install.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-5xl px-4 grid gap-10 md:grid-cols-2">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
          <h2 class="text-xl font-semibold text-slate-900">Who thrives at MKS</h2>
          <ul class="mt-4 space-y-3 text-base text-slate-700">
            {traits.map((trait) => (
              <li key={trait}>• {trait}</li>
            ))}
          </ul>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-slate-50 p-8 shadow-sm">
          <h2 class="text-xl font-semibold text-slate-900">Why join the crew</h2>
          <ul class="mt-4 space-y-3 text-base text-slate-700">
            {benefits.map((benefit) => (
              <li key={benefit}>• {benefit}</li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <section class="py-16 bg-slate-50">
      <div class="container mx-auto max-w-4xl px-4 space-y-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900">Current opportunities</h2>
        <p class="text-base text-slate-700">
          We are not advertising specific roles right now, but we are building a shortlist for upcoming expansion. Apprenticeships and experienced technician roles will be announced first to our interested candidates list.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900">Keen to chat?</h2>
        <p class="text-base text-slate-700">
          Email your CV or introduction to <a href="mailto:admin@mksruralservices.com" class="text-sky-700 font-semibold hover:underline">admin@mksruralservices.com</a>. Let us know your experience, availability, and the type of work you enjoy.
        </p>
        <p class="text-base text-slate-700">
          Prefer an informal conversation first? Call <a href="tel:0405837584" class="text-sky-700 font-semibold hover:underline">0405 837 584</a> and ask for Mark.
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
