---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Newsletter | Stay in Touch with MKS Rural Services',
  description: 'Subscribe to the MKS Rural Services newsletter for HVAC maintenance reminders, community updates, and new resource releases across Queensland.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Newsletter</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">Join our country care community</h1>
        <p class="text-lg text-slate-700">
          We share seasonal maintenance reminders, behind-the-scenes stories, and local event news a few times a year. No spam — just helpful tips and good yarns.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-3xl px-4">
        <div class="rounded-3xl border border-slate-200 bg-white p-10 shadow-sm text-center space-y-6">
          <p class="text-base text-slate-700">
            Pop us an email and we will add you to the list. Mention any topics you would like covered — from cold room care to career opportunities.
          </p>
          <a href="mailto:admin@mksruralservices.com?subject=Newsletter%20Subscription" class="inline-flex items-center justify-center rounded-lg bg-sky-600 px-6 py-3 text-white font-semibold hover:bg-sky-700">
            Email us to join the newsletter
          </a>
          <p class="text-sm text-slate-500">
            Prefer a phone call reminder? Ring <a href="tel:0405837584" class="text-sky-700 font-semibold hover:underline">0405 837 584</a> and we will note your details.
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
