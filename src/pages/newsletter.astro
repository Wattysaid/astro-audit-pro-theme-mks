---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';
import { Button } from '@/components/ui/button';
---

<Layout>
  <Header />
  <main>
    {/* Hero Section */}
    <section class="bg-gradient-to-b from-indigo-50 to-white py-20">
      <div class="container mx-auto max-w-7xl px-4">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            Stay Informed on Security Auditing
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Get the latest insights, best practices, and industry updates delivered straight to your inbox.
          </p>
        </div>
      </div>
    </section>

    {/* Newsletter Options */}
    <section class="py-16">
      <div class="container mx-auto max-w-7xl px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center text-2xl mb-4">
              ðŸ“°
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Weekly Digest</h3>
            <p class="text-gray-600 mb-6">
              A curated summary of the week's most important security audit news and updates.
            </p>
            <ul class="space-y-3 mb-6">
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Industry news</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Best practices</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Tool updates</span>
              </li>
            </ul>
            <Button className="w-full bg-blue-600 hover:bg-blue-700 text-white">Subscribe</Button>
          </div>

          <div class="bg-white rounded-xl p-8 shadow-lg border-2 border-blue-200 transform md:scale-105">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center text-2xl mb-4">
              ðŸ”’
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Security Alerts</h3>
            <p class="text-gray-600 mb-6">
              Real-time notifications about critical security vulnerabilities and compliance updates.
            </p>
            <ul class="space-y-3 mb-6">
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Vulnerability alerts</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Compliance updates</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Security advisories</span>
              </li>
            </ul>
            <Button className="w-full bg-purple-600 hover:bg-purple-700 text-white">Subscribe</Button>
          </div>

          <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center text-2xl mb-4">
              ðŸ“š
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Resource Updates</h3>
            <p class="text-gray-600 mb-6">
              Be the first to know about new guides, templates, and educational resources.
            </p>
            <ul class="space-y-3 mb-6">
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>New ebooks</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Templates</span>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Training materials</span>
              </li>
            </ul>
            <Button className="w-full bg-green-600 hover:bg-green-700 text-white">Subscribe</Button>
          </div>
        </div>
      </div>
    </section>

    {/* Subscription Form */}
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto max-w-3xl px-4">
        <div class="bg-white rounded-xl p-8 shadow-lg">
          <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">
            Customize Your Subscription
          </h2>
          <form class="space-y-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
              <input
                type="text"
                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="Enter your name"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
              <input
                type="email"
                class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="Enter your email"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Interests</label>
              <div class="space-y-2">
                <label class="flex items-center">
                  <input type="checkbox" class="rounded text-blue-600 focus:ring-blue-500" />
                  <span class="ml-2">Security News & Updates</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded text-blue-600 focus:ring-blue-500" />
                  <span class="ml-2">Best Practices & Guides</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded text-blue-600 focus:ring-blue-500" />
                  <span class="ml-2">Product Updates</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded text-blue-600 focus:ring-blue-500" />
                  <span class="ml-2">Training & Events</span>
                </label>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Email Frequency</label>
              <select class="w-full px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option>Daily Updates</option>
                <option>Weekly Digest</option>
                <option>Monthly Summary</option>
              </select>
            </div>
            <Button className="w-full bg-blue-600 hover:bg-blue-700 text-white">
              Subscribe to Newsletter
            </Button>
          </form>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
