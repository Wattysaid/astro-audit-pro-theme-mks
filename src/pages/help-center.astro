---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Support Centre | Contact MKS Rural Services',
  description: 'Get in touch with MKS Rural Services for refrigeration and air conditioning support. Find emergency steps, maintenance planning tips, and follow-up processes.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const resources = [
  {
    title: 'Request a service visit',
    detail: 'Call 0405 837 584 or email admin@mksruralservices.com with your site address, equipment details, and preferred times. Photos of the unit or fault help us load the right parts.'
  },
  {
    title: 'Emergency breakdown checklist',
    detail: 'Isolate power if safe, secure the area, record error codes or temperatures, and keep doors closed. We will walk you through any additional immediate steps over the phone.'
  },
  {
    title: 'Preventative maintenance programs',
    detail: 'Choose quarterly, biannual, or bespoke schedules aligned with harvests, school terms, or charter timetables. Contracts include reminder emails and post-service reports.'
  },
  {
    title: 'Documentation & follow-up',
    detail: 'After each visit you receive a written summary, parts used, and recommendations. We also store this history securely so repeat clients get faster diagnostics next time.'
  }
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Support</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">How to reach the MKS Rural Services crew</h1>
        <p class="text-lg text-slate-700">
          Friendly, honest help is a phone call away. We keep the process simple so you know what happens before, during, and after every visit.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-5xl px-4 space-y-6">
        {resources.map((resource) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm" key={resource.title}>
            <h2 class="text-xl font-semibold text-slate-900">{resource.title}</h2>
            <p class="mt-3 text-base text-slate-700">{resource.detail}</p>
          </div>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout>
