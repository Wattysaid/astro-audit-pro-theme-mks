---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Industries We Serve | MKS Rural Services HVAC Solutions',
  description: 'MKS Rural Services supports residential, rural, commercial, industrial, and marine clients across Queensland with customised refrigeration and air conditioning services.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const industries = [
  {
    name: 'Residential & Domestic',
    detail: 'Split-system installs, ducted upgrades, indoor air quality improvements, and maintenance reminders for households and property managers.'
  },
  {
    name: 'Agriculture & Rural Enterprises',
    detail: 'Cold rooms, produce storage, dairies, sheds, and mobile plant repairs completed on-site with our workshop trailer.'
  },
  {
    name: 'Hospitality & Retail',
    detail: 'Compliance-ready refrigeration for cafes, supermarkets, butchers, and pubs, including after-hours breakdown support.'
  },
  {
    name: 'Industrial & Manufacturing',
    detail: 'Process cooling, ventilation, and preventative maintenance programs tailored to shift work and safety requirements.'
  },
  {
    name: 'Education & Community Facilities',
    detail: 'Schools, childcare centres, and council venues needing safe climate control and rapid service during peak events.'
  },
  {
    name: 'Marine & Transport',
    detail: 'Marine HVAC design, refits, and scheduled maintenance that align with charter rosters and docking windows.'
  }
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Industries We Serve</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">From farm sheds to marine fleets</h1>
        <p class="text-lg text-slate-700">
          MKS Rural Services adapts every HVAC solution to the realities of rural Queensland â€” dust, distance, humidity, and all. Here are the sectors we support every week.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-6xl px-4 grid gap-8 md:grid-cols-2">
        {industries.map((industry) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm" key={industry.name}>
            <h2 class="text-xl font-semibold text-slate-900">{industry.name}</h2>
            <p class="mt-3 text-base text-slate-700">{industry.detail}</p>
            <p class="mt-4 text-sm text-slate-600">
              Need help right now? <a href="tel:0405837584" class="text-sky-700 font-semibold hover:underline">Call 0405 837 584</a> or <a href="mailto:admin@mksruralservices.com" class="text-sky-700 font-semibold hover:underline">email the team</a>.
            </p>
          </div>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout>
