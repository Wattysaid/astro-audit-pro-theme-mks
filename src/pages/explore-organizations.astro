---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Who We Work With | MKS Rural Services Clients',
  description: 'MKS Rural Services supports homeowners, farmers, retailers, councils, and marine operators with friendly HVAC expertise across Queensland.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const clients = [
  {
    title: 'Homeowners & Property Managers',
    description: 'Comfortable living spaces with honest advice on repair versus replacement, ducted upgrades, and indoor air quality.'
  },
  {
    title: 'Primary Producers',
    description: 'Horticulture, dairy, and livestock operations relying on stable refrigeration, cold chain compliance, and rapid breakdown response.'
  },
  {
    title: 'Hospitality & Retail',
    description: 'Restaurants, cafes, butchers, and supermarkets needing precise temperature control and after-hours support.'
  },
  {
    title: 'Workshops & Light Industry',
    description: 'Manufacturing, fabrication, and service workshops requiring ventilation, climate control, and dust management.'
  },
  {
    title: 'Councils & Community Facilities',
    description: 'Community halls, childcare centres, schools, and libraries benefiting from maintenance contracts and safety-first servicing.'
  },
  {
    title: 'Marine Operators',
    description: 'Commercial and leisure vessels that count on quiet, efficient HVAC fit-outs scheduled around docking windows.'
  }
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-b from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-4xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Clients</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">Trusted HVAC support for neighbours across Queensland</h1>
        <p class="text-lg text-slate-700">
          We work with people who value straight talk, tidy work, and a technician who remembers their name. Here’s a snapshot of the communities we’re proud to serve.
        </p>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-6xl px-4 grid gap-8 md:grid-cols-2">
        {clients.map((client) => (
          <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm" key={client.title}>
            <h2 class="text-xl font-semibold text-slate-900">{client.title}</h2>
            <p class="mt-3 text-base text-slate-700">{client.description}</p>
            <p class="mt-4 text-sm text-slate-600">
              Let us know how we can help: <a href="tel:0405837584" class="text-sky-700 font-semibold hover:underline">Call 0405 837 584</a> or email <a href="mailto:admin@mksruralservices.com" class="text-sky-700 font-semibold hover:underline">admin@mksruralservices.com</a>.
            </p>
          </div>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout>
