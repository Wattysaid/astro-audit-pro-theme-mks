---
import Layout from '../layouts/main.astro';
import Header from '@/components/layout/Header';
import Footer from '@/components/layout/Footer';

const seo = {
  title: 'Service Pricing & HVAC Contracts | MKS Rural Services Queensland',
  description: 'Explore transparent pricing, maintenance contracts, and free consultation options from MKS Rural Services — Fernvale-based refrigeration and air conditioning specialists.',
  image: '/og-image.png',
  canonicalURL: Astro.site + Astro.url.pathname,
};

const packages = [
  {
    title: 'Breakdown Call-Outs',
    detail: 'Weekday response with transparent travel, labour, and parts. Emergency after-hours support available on request.',
  },
  {
    title: 'Preventative Maintenance',
    detail: 'Quarterly or biannual coil cleaning, filter changes, and performance testing tailored to your equipment load.',
  },
  {
    title: 'Design & Installation Projects',
    detail: 'Fixed-price proposals covering heat-load calculations, equipment supply, and commissioning with warranties.'
  }
];

const contractBenefits = [
  'Priority scheduling during peak seasons and heatwaves.',
  'Budget certainty with agreed service intervals and payment plans.',
  'Detailed reports supporting insurance, compliance, and internal audits.',
  'Supports our apprenticeship and training roadmap, helping us respond faster.'
];

const serviceSignals = [
  {
    href: '/services/system-design-installation',
    title: 'AC runs non-stop but rooms stay warm',
    description: 'An undersized system must run constantly in Queensland heat. We right-size your replacement so comfort returns without wasted energy.',
  },
  {
    href: '/services/system-design-installation',
    title: 'Unit short-cycles and the house stays muggy',
    description: 'Oversized equipment short-cycles, leaving humidity hanging in the air. Our design team balances capacity and control for steady comfort.',
  },
  {
    href: '/services/maintenance-coil-cleaning',
    title: 'Musty or stale odours blowing through vents',
    description: 'Mouldy indoor coils and drains create odours and poor air quality. Deep cleans and sanitisation strip out the buildup and restore fresh airflow.',
  },
  {
    href: '/services/breakdown-repairs',
    title: 'Outdoor unit is scorching and bills are climbing',
    description: 'Clogged condenser coils make systems run hot and burn power. We clear debris, reset pressures, and stop the energy bill spike.',
  },
  {
    href: '/services/maintenance-coil-cleaning',
    title: 'Water drips around the indoor unit or pipework',
    description: 'Poor insulation and sealing lets condensation form on refrigerant lines. We rewrap pipework and tidy drains so moisture stays contained.',
  },
  {
    href: '/services/system-design-installation',
    title: 'Certain rooms never cool or airflow feels weak',
    description: 'Unbalanced ductwork starves rooms of airflow. We redesign runs, balance grilles, and tune controls so every zone hits the setpoint.',
  },
  {
    href: '/services/maintenance-coil-cleaning',
    title: 'Pests keep nesting around your HVAC gear',
    description: 'Gaps around penetrations invite geckos and insects that fry electronics. Our techs seal entries and fit deterrents to keep critters out.',
  },
  {
    href: '/services/maintenance-coil-cleaning',
    title: 'System just isn’t as efficient as it used to be',
    description: 'Corrosion and wear quietly drag performance down. Scheduled inspections spot failing parts early and return the system to peak output.',
  },
];
---

<Layout {...seo}>
  <Header />
  <main class="bg-white">
    <section class="bg-gradient-to-r from-sky-50 via-white to-slate-100 py-20">
      <div class="container mx-auto max-w-5xl px-4 text-center space-y-4">
        <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Services & Pricing</p>
        <h1 class="text-3xl md:text-5xl font-bold text-slate-900">Honest HVAC pricing with a friendly country feel</h1>
        <p class="text-lg text-slate-700">
          Every proposal includes a written breakdown of labour, travel, and parts so you know exactly what you’re paying for. We would rather take an extra day to get it right than cut corners.
        </p>
      </div>
    </section>

    <section class="py-16 bg-white">
      <div class="container mx-auto max-w-6xl px-4 space-y-10">
        <div class="space-y-3 text-center">
          <p class="text-sm font-semibold uppercase tracking-wide text-sky-700">Our Core Services</p>
          <h2 class="text-3xl font-bold text-slate-900">Choose the support that fits your site</h2>
          <p class="text-base text-slate-700">Click a service to see what is included, the benefits, and real-world examples of our work.</p>
        </div>
        <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-4">
          {serviceSignals.map((signal) => (
            <a
              href={signal.href}
              class="group rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition-transform hover:-translate-y-1 hover:shadow-lg focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-sky-600"
              key={signal.title}
            >
              <h3 class="text-xl font-semibold text-slate-900">{signal.title}</h3>
              <p class="mt-3 text-base text-slate-700">{signal.description}</p>
              <span class="mt-4 inline-flex text-sm font-semibold text-sky-700 group-hover:underline">See how we fix it →</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <section class="py-16">
      <div class="container mx-auto max-w-6xl px-4 grid gap-8 md:grid-cols-2">
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm space-y-6">
          <h2 class="text-2xl font-semibold text-slate-900">How we prepare your quote</h2>
          <ul class="space-y-4 text-base text-slate-700">
            <li><span class="font-semibold text-sky-700">Listen:</span> We discuss your goals, equipment history, and any safety or compliance requirements.</li>
            <li><span class="font-semibold text-sky-700">Inspect:</span> Site visits or photos help us confirm parts, access, and sequencing to avoid surprises.</li>
            <li><span class="font-semibold text-sky-700">Plan:</span> You receive options that balance reliability, budget, and timing — including staged upgrades if helpful.</li>
            <li><span class="font-semibold text-sky-700">Deliver:</span> Work begins only after you approve the written scope. Any changes are talked through before we proceed.</li>
          </ul>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-slate-50 p-8 shadow-sm space-y-6">
          <h2 class="text-2xl font-semibold text-slate-900">Typical service packages</h2>
          <ul class="space-y-4 text-base text-slate-700">
            {packages.map((pkg) => (
              <li key={pkg.title}>
                <p class="text-lg font-semibold text-slate-900">{pkg.title}</p>
                <p class="text-sm text-slate-600">{pkg.detail}</p>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <section class="py-16 bg-slate-50" id="service-contracts">
      <div class="container mx-auto max-w-5xl px-4 grid gap-10 md:grid-cols-2 items-start">
        <div class="space-y-4">
          <h2 class="text-2xl md:text-3xl font-bold text-slate-900">Maintenance contracts for long-term peace of mind</h2>
          <p class="text-base text-slate-700">
            Schools, councils, supermarkets, and primary producers rely on us to keep critical assets running. Formal contracts help you secure consistent servicing while supporting our goal to hire apprentices and expand the crew.
          </p>
          <ul class="space-y-3 text-base text-slate-700">
            {contractBenefits.map((benefit) => (
              <li key={benefit}>• {benefit}</li>
            ))}
          </ul>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm space-y-4">
          <h3 class="text-lg font-semibold text-slate-900">Ready to map out a plan?</h3>
          <p class="text-sm text-slate-700">
            Email <a href="mailto:admin@mksruralservices.com" class="text-sky-700 font-semibold hover:underline">admin@mksruralservices.com</a> with your site details or call <a href="tel:0405837584" class="text-sky-700 font-semibold hover:underline">0405 837 584</a>. We will prepare a tailored proposal and outline flexible payment options.
          </p>
          <p class="text-sm text-slate-700">
            Prefer a quick conversation first? <a href="/help-center" class="text-sky-700 font-semibold hover:underline">Visit the support centre</a> for prep checklists and next steps.
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
