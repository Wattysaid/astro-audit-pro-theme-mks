---
import ServicePage from '../../layouts/service-page.astro';
import ServiceExampleCard from '@/components/service/ServiceExampleCard.astro';
import { getCaseStudiesForService } from '@/lib/case-studies';

const benefits = [
  'Healthier indoor air by removing mould, bacteria, and allergens from coils and drain pans.',
  'Early detection of wear, corrosion, and refrigerant issues reduces emergency call-outs.',
  'Lower operating costs through restored heat transfer and optimised performance.',
  'Pest deterrent strategies prevent geckos, rodents, and insects from damaging electronics.',
];

const caseStudies = getCaseStudiesForService('maintenance-coil-cleaning');

const seo = {
  title: 'Service, Maintenance & Coil Cleaning | MKS Rural Services',
  description: 'Professional HVAC maintenance, coil sanitisation, and pest protection programs that keep systems efficient and compliant across Queensland.',
  image: '/service/service-maintenance-2.jpg',
  canonicalURL: Astro.site + Astro.url.pathname,
};
---

<ServicePage
  seo={seo}
  title="Service, Maintenance & Coil Cleaning"
  summary="Protect system performance, indoor air quality, and asset life with maintenance programs tailored to rural households, farms, and commercial operations."
  heroImage="/service/service-maintenance-2.jpg"
  heroImageAlt="Technician sanitising an indoor coil"
  benefits={benefits}
  ctaHeading="Ready to protect your HVAC investment?"
  ctaBody="Lock in a maintenance schedule that keeps equipment reliable and compliant."
  ctaPrimary={{ label: 'Call 0405 837 584', href: 'tel:0405837584' }}
  ctaSecondary={{ label: 'Request a maintenance plan', href: 'mailto:admin@mksruralservices.com?subject=Maintenance%20Program%20Enquiry' }}
>
  <Fragment slot="intro">
    <section class="space-y-4 text-base text-slate-700">
      <p>
        Preventative maintenance is the simplest way to avoid expensive breakdowns. Our technicians clean and inspect every component, document findings, and recommend any corrective work before it becomes urgent.
      </p>
      <p>
        We align visits with your busy periods — whether that’s harvest, school terms, or tourism seasons — and provide written reports for insurance and compliance records.
      </p>
    </section>
  </Fragment>

  <section class="space-y-6">
    <h2 class="text-2xl font-bold text-slate-900">What the service includes</h2>
    <div class="grid gap-6 md:grid-cols-2">
      <article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <h3 class="text-xl font-semibold text-slate-900">Coil &amp; hygiene treatments</h3>
        <ul class="mt-3 space-y-2 text-base text-slate-700">
          <li>• Indoor coil sanitisation to remove mould and bacteria.</li>
          <li>• Outdoor condenser cleaning for optimal heat rejection.</li>
          <li>• Drain pan, filter, and condensate line servicing.</li>
        </ul>
      </article>
      <article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <h3 class="text-xl font-semibold text-slate-900">Performance assurance</h3>
        <ul class="mt-3 space-y-2 text-base text-slate-700">
          <li>• Refrigerant pressure and electrical checks.</li>
          <li>• Fan, belt, and bearing inspections for wear.</li>
          <li>• System optimisation to lower running costs.</li>
        </ul>
      </article>
    </div>
  </section>

  <section class="space-y-6">
    <h2 class="text-2xl font-bold text-slate-900">Program options</h2>
    <ul class="space-y-3 text-base text-slate-700">
      <li><strong>Domestic comfort plans:</strong> Quarterly or seasonal visits that keep family homes comfortable and clean.</li>
      <li><strong>Commercial contracts:</strong> Flexible schedules for shops, schools, and councils with discounted breakdown rates.</li>
      <li><strong>Specialised systems:</strong> Marine, agricultural, and industrial refrigeration supported with tailored checklists.</li>
    </ul>
  </section>

  <Fragment slot="case-studies">
    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      {caseStudies.map((study) => (
        <ServiceExampleCard
          href={`/projects/${study.serviceSlug}/${study.slug}/`}
          location={study.location}
          summary={study.summary}
          title={study.title}
        />
      ))}
    </div>
  </Fragment>
</ServicePage>
